<project>
  <licensing>
    <tag>MIT and ASL 2.0</tag>
    <file>LICENSE.txt</file>
  </licensing>
  <module>
    <dependency>plexus-utils</dependency>
    <dependency>sisu-plexus</dependency>
    <dependency>plexus-build-api</dependency>
    <dependency>plexus-component-annotations</dependency>
    <dependency>jsoup</dependency>
    <build>
      <compiler>
        <addSourceRoot>modello-core/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-converters/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-dom4j/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-java/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-jdom/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-sax/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-stax/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-xdoc/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-xml/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-xpp3/src/main/java</addSourceRoot>
        <addSourceRoot>modello-plugins/modello-plugin-xsd/src/main/java</addSourceRoot>
      </compiler>
      <plexus/>
    </build>
  </module>
  <module>
    <name>modello-maven-plugin</name>
    <subDir>modello-maven-plugin</subDir>
    <dependency>modello</dependency>
    <dependency>maven-plugin-tools</dependency>
    <dependency>maven-plugin-api</dependency>
    <dependency>maven-model</dependency>
    <dependency>maven-core</dependency>
    <dependency>plexus-utils</dependency>
    <dependency>plexus-build-api</dependency>
    <dependency>maven-artifact</dependency>  <!-- required by Eclipse  -->
    <build>
      <compiler>
        <addSourceRoot>src/main/java</addSourceRoot>
        <excludeSourceClass>org/codehaus/modello/maven/ModelloVelocityMojo</excludeSourceClass>
      </compiler>
      <pdc>
        <groupId>org.codehaus.modello</groupId>
      </pdc>
    </build>
  </module>
</project>
