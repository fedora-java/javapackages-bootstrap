<project>
  <licensing>
    <tag>Apache-2.0</tag>
  </licensing>
  <module>
    <dependency>plexus-utils</dependency>
    <dependency>plexus-java</dependency>
    <dependency>sisu-plexus</dependency>
    <dependency>asm</dependency>
    <dependency>asm-util</dependency>
    <dependency>httpcomponents-core</dependency>
    <dependency>httpcomponents-client</dependency>
    <dependency>maven-artifact</dependency>
    <dependency>maven-core</dependency>
    <dependency>maven-plugin-api</dependency>
    <dependency>maven-model</dependency>
    <dependency>maven-repository-metadata</dependency>
    <dependency>maven-resolver</dependency>
    <dependency>maven-settings</dependency>
    <dependency>maven-wagon</dependency>
    <dependency>slf4j</dependency>
    <dependency>jsoup</dependency>
    <dependency>injection-api</dependency>
    <dependency>qdox</dependency>
    <dependency>plexus-archiver</dependency>
    <dependency>plexus-build-api</dependency>
    <dependency>plexus-classworlds</dependency>  <!-- required by Eclipse  -->
    <build>
      <compiler>
        <addSourceRoot>maven-plugin-annotations/src/main/java</addSourceRoot>
        <addSourceRoot>maven-plugin-tools-api/src/main/java</addSourceRoot>
        <addSourceRoot>maven-plugin-tools-generators/src/main/java</addSourceRoot>
        <addSourceRoot>maven-plugin-tools-annotations/src/main/java</addSourceRoot>
        <addSourceRoot>maven-plugin-tools-java/src/main/java</addSourceRoot>
        <addSourceRoot>maven-plugin-plugin/src/main/java</addSourceRoot>
        <excludeSourceClass>PluginReport</excludeSourceClass>
        <excludeSourceClass>PluginXdocGenerator</excludeSourceClass>
        <addResource>maven-plugin-tools-generators/src/main/resources</addResource>
      </compiler>
      <sisu/>
      <plexus>
        <gleanFromXML>maven-script/maven-script-ant/src/main/resources/META-INF/plexus/components.xml</gleanFromXML>
        <gleanFromXML>maven-plugin-plugin/src/main/filtered-resources/META-INF/plexus/components.xml</gleanFromXML>
      </plexus>
      <pdc/>
    </build>
  </module>
</project>
