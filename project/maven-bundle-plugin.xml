    <dependency>plexus-build-api</dependency>
    <dependency>osgi-core</dependency>
    <dependency>osgi-cmpn</dependency>
    <dependency>bnd</dependency>
    <dependency>felix-utils</dependency>
    <build>
      <compiler>
        <addSourceRoot>src/main/java</addSourceRoot>
        <excludeSourceMatching>/org/apache/maven/shared/dependency/.*</excludeSourceMatching>
        <excludeSourceMatching>/org/apache/felix/bundleplugin/pom/.*</excludeSourceMatching>
        <excludeSourceMatching>/org/apache/felix/obrplugin/.*</excludeSourceMatching>
        <excludeSourceClass>BaselineReport</excludeSourceClass>
        <addResource>src/main/resources</addResource>
      </compiler>
      <pdc>
        <groupId>org.apache.felix</groupId>
      </pdc>
    </build>
  </module>
</project>
