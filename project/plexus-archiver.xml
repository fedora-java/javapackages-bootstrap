<project>
  <licensing>
    <tag>ASL 2.0</tag>
  </licensing>
  <module>
    <dependency>plexus-utils</dependency>
    <dependency>jsr-305</dependency>
    <dependency>plexus-io</dependency>
    <dependency>sisu-plexus</dependency>
    <dependency>commons-compress</dependency>
    <dependency>commons-io</dependency>
    <build>
      <compiler>
        <addSourceRoot>src/main/java</addSourceRoot>
        <excludeSourceMatching>/org/codehaus/plexus/archiver/snappy/.*</excludeSourceMatching>
        <excludeSourceClass>org/codehaus/plexus/archiver/tar/SnappyTarFile</excludeSourceClass>
        <excludeSourceClass>org/codehaus/plexus/archiver/tar/PlexusIoTarSnappyFileResourceCollection</excludeSourceClass>
      </compiler>
      <cdc>
        <gleanFromXML>src/main/resources/META-INF/plexus/components.xml</gleanFromXML>
      </cdc>
    </build>
  </module>
</project>
