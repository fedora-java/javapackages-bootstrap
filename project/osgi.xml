        <addSourceRoot>org.osgi.service.cm/src</addSourceRoot>
        <addSourceRoot>org.osgi.service.component/src</addSourceRoot>
        <addSourceRoot>org.osgi.service.configurator/src</addSourceRoot>
        <addSourceRoot>org.osgi.service.device/src</addSourceRoot>
        <addSourceRoot>org.osgi.service.dmt/src</addSourceRoot>
        <addSourceRoot>org.osgi.service.event/src</addSourceRoot>
