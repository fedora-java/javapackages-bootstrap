      <compiler>
        <addSourceRoot>org.osgi.namespace.contract/src</addSourceRoot>
        <addSourceRoot>org.osgi.namespace.extender/src</addSourceRoot>
        <addSourceRoot>org.osgi.namespace.implementation/src</addSourceRoot>
