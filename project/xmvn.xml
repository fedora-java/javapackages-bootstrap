<project>
  <licensing>
    <tag>ASL 2.0</tag>
    <file>NOTICE</file>
  </licensing>
  <module>
    <dependency>plexus-utils</dependency>
    <dependency>sisu-plexus</dependency>
    <dependency>plexus-component-annotations</dependency>
    <dependency>slf4j</dependency>
    <dependency>maven-resolver</dependency>
    <dependency>plexus-classworlds</dependency>
    <dependency>maven-plugin-tools</dependency>
    <dependency>jcommander</dependency>
    <dependency>commons-compress</dependency>
    <dependency>asm</dependency>
    <dependency>maven-core</dependency>
    <dependency>maven-artifact</dependency>
    <dependency>maven-model</dependency>
    <dependency>maven-model-builder</dependency>
    <dependency>maven-plugin-api</dependency>
    <build>
      <modello>
        <model>xmvn-api/src/main/mdo/config.mdo</model>
        <version>4.0.0</version>
        <output>java|stax-reader|stax-writer</output>
        <xpp3dom>false</xpp3dom>
      </modello>
      <modello>
        <model>xmvn-api/src/main/mdo/metadata.mdo</model>
        <version>4.0.0</version>
        <output>java|stax-reader|stax-writer</output>
        <xpp3dom>false</xpp3dom>
      </modello>
      <compiler>
        <release>11</release>
        <addSourceRoot>xmvn-api/src/main/java</addSourceRoot>
        <addSourceRoot>xmvn-connector-aether/src/main/java</addSourceRoot>
        <addSourceRoot>xmvn-core/src/main/java</addSourceRoot>
        <addSourceRoot>xmvn-mojo/src/main/java</addSourceRoot>
        <addSourceRoot>xmvn-tools/xmvn-install/src/main/java</addSourceRoot>
        <addSourceRoot>xmvn-tools/xmvn-resolve/src/main/java</addSourceRoot>
        <addSourceRoot>xmvn-tools/xmvn-subst/src/main/java</addSourceRoot>
        <addResource>xmvn-core/src/main/resources</addResource>
        <addResource>xmvn-mojo/src/main/resources</addResource>
        <addResource>xmvn-tools/xmvn-install/src/main/resources</addResource>
      </compiler>
      <cdc/>
      <pdc>
        <groupId>org.fedoraproject.xmvn</groupId>
        <artifactId>xmvn-mojo</artifactId>
      </pdc>
    </build>
  </module>
</project>
