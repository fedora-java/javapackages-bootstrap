<project>
  <licensing>
    <tag>Apache-2.0</tag>
  </licensing>
  <module>
    <dependency>sisu-plexus</dependency>
    <dependency>plexus-utils</dependency>
    <build>
      <compiler>
        <addSourceRoot>src/main/java</addSourceRoot>
        <!-- maven-filtering tests need TestIncrementalBuildContext -->
        <addSourceRoot>src/test/java</addSourceRoot>
      </compiler>
      <plexus>
        <addComponent>org.sonatype.plexus.build.incremental.DefaultBuildContext|org.sonatype.plexus.build.incremental.BuildContext|default</addComponent>
      </plexus>
    </build>
  </module>
</project>
