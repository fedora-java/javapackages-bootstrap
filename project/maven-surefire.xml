<project>
  <licensing>
    <tag>ASL 2.0</tag>
  </licensing>
  <module>
    <dependency>junit4</dependency>
    <dependency>junit5-platform</dependency>
    <dependency>testng</dependency>
    <dependency>commons-lang</dependency>
    <dependency>commons-io</dependency>
    <dependency>maven-shared-utils</dependency>
    <dependency>jsr-305</dependency>
    <build>
      <compiler>
        <addSourceRoot>surefire-api/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-booter/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-extensions-api/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-extensions-spi/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-logger-api/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/common-java5/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/common-junit3/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/common-junit4/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/common-junit48/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/surefire-junit-platform/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/surefire-junit3/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/surefire-junit4/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/surefire-junit47/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/surefire-testng-utils/src/main/java</addSourceRoot>
        <addSourceRoot>surefire-providers/surefire-testng/src/main/java</addSourceRoot>
        <excludeSourceClass>org/apache/maven/surefire/common/junit48/FilterFactory</excludeSourceClass>
        <excludeSourceClass>org/apache/maven/surefire/common/junit48/GroupMatcherCategoryFilter</excludeSourceClass>
        <excludeSourceClass>org/apache/maven/surefire/testng/utils/GroupMatcherMethodSelector</excludeSourceClass>
        <addResource>surefire-booter/src/main/resources</addResource>
      </compiler>
    </build>
  </module>
  <module>
    <name>maven-surefire-plugin</name>
    <subDir>maven-surefire-plugin</subDir>
    <dependency>maven-surefire</dependency>
    <dependency>commons-lang</dependency>
    <dependency>commons-io</dependency>
    <dependency>maven-shared-utils</dependency>
    <dependency>jsr-305</dependency>
    <dependency>sisu-plexus</dependency>
    <dependency>maven-common-artifact-filters</dependency>
    <dependency>maven-plugin-tools</dependency>
    <dependency>maven-core</dependency>
    <dependency>maven-plugin-api</dependency>
    <dependency>maven-model</dependency>
    <dependency>maven-artifact</dependency>
    <dependency>plexus-java</dependency>
    <dependency>commons-compress</dependency>
    <dependency>plexus-component-annotations</dependency>
    <dependency>injection-api</dependency>
    <dependency>maven-resolver</dependency>
    <build>
      <compiler>
        <addSourceRoot>src/main/java</addSourceRoot>
        <addSourceRoot>../maven-failsafe-plugin/src/main/java</addSourceRoot>
        <addSourceRoot>../maven-surefire-common/src/main/java</addSourceRoot>
      </compiler>
      <sisu/>
      <plexus/>
      <pdc>
        <artifactId>maven-surefire-plugin</artifactId>
      </pdc>
    </build>
  </module>
</project>
