<project>
  <licensing>
    <tag>ASL 2.0</tag>
    <file>NOTICE.txt</file>
  </licensing>
  <module>
    <dependency>xz-java</dependency>
    <build>
      <compiler>
        <addSourceRoot>src/main/java</addSourceRoot>
        <excludeSourceMatching>/org/apache/commons/compress/(compressors|archivers)/(brotli|sevenz|lzma|zstandard|examples)/.*</excludeSourceMatching>
        <excludeSourceMatching>/org/apache/commons/compress/harmony/(pack200|unpack200)/.*</excludeSourceMatching>
        <excludeSourceClass>ArchiveStreamFactory</excludeSourceClass>
        <excludeSourceClass>CompressorStreamFactory</excludeSourceClass>
        <excludeSourceClass>Lister</excludeSourceClass>
      </compiler>
    </build>
  </module>
</project>
