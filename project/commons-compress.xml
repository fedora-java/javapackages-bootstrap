<project>
  <licensing>
    <tag>Apache-2.0</tag>
    <file>NOTICE.txt</file>
  </licensing>
  <module>
    <dependency>xz-java</dependency>
    <dependency>asm</dependency>
    <dependency>commons-io</dependency>
    <dependency>commons-lang</dependency>
    <dependency>commons-codec</dependency>
    <build>
      <compiler>
        <addSourceRoot>src/main/java</addSourceRoot>
        <excludeSourceMatching>/org/apache/commons/compress/compressors/(brotli|zstandard)/.*</excludeSourceMatching>
        <automaticModuleName>org.apache.commons.compress</automaticModuleName>
      </compiler>
    </build>
  </module>
</project>
